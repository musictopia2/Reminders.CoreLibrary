<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk.Razor">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <Version>9.0.1</Version>
    <RunPostBuildAppCondition Condition="'$(Configuration)' == 'Release'">true</RunPostBuildAppCondition>
    <FeedType>Public</FeedType>
  </PropertyGroup>
  <ItemGroup>
    <SupportedPlatform Include="browser" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="AdoNetHelpersGenerators" Version="1.0.13" PrivateAssets="all" />
    <PackageReference Include="CommonBasicLibraries" Version="10.0.1" />
    <PackageReference Include="BasicBlazorLibrary" Version="10.0.1" />
  </ItemGroup>
  <ItemGroup>
    <Using Remove="System.Threading" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Components\MainReminderComponent.razor" />
    <None Include="Components\ReminderLabelComponent.razor" />
    <None Include="Components\ReminderListComponent.razor" />
    <None Include="Components\ReminderPopupComponent.razor" />
    <None Include="Components\StartReminderPopupComponent.razor" />
  </ItemGroup>
  <Target Name="PostBuild" AfterTargets="PostBuildEvent">
    <Exec Command="C:\VS\OneNet\Apps\CommandLines\PostBuildPackageHandler\bin\Release\net10.0\PostBuildPackageHandler.exe $(ProjectName) $(ProjectDir) $(ProjectFileName) $(TargetDir)" Condition="'$(Configuration)' == 'Release' and '$(RunPostBuildAppCondition)' == 'true'" />
  </Target>
</Project>